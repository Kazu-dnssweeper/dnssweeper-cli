{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "^(bash|shell|run_command|execute_command|cmd)$",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/approval_avoider.py"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/dza_force_display.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "^(bash|shell|run_command|execute_command|cmd)$",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/detect_frozen.py",
            "run_in_background": true
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/dza_intelligent_monitor.py",
            "run_in_background": true
          }
        ]
      },
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/dza_force_display.py",
            "run_in_background": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/task_switcher.py check_queue",
            "run_in_background": true
          }
        ]
      }
    ]
  }
}